{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "__experimental": true,
  "name": "popper/form-textarea",
  "title": "Textarea Field",
  "category": "common",
  "ancestor": [
    "popper/form"
  ],
  "description": "The basic building block for forms.",
  "keywords": [
    "input",
    "form"
  ],
  "textdomain": "default",
  "icon": "forms",
  "attributes": {
    "type": {
      "type": "string",
      "selector": "textarea",
      "source": "attribute",
      "attribute": "type"
    },
    "id": {
      "type": "string",
      "selector": "textarea",
      "source": "attribute",
      "attribute": "id"
    },
    "name": {
      "type": "string",
      "selector": "textarea",
      "source": "attribute",
      "attribute": "name"
    },
    "label": {
      "type": "rich-text",
      "default": "Label",
      "selector": "label>span:first-of-type",
      "source": "rich-text",
      "__experimentalRole": "content"
    },
    "required": {
      "type": "boolean",
      "default": false,
      "selector": "textarea",
      "source": "attribute",
      "attribute": "required"
    },
    "placeholder": {
      "type": "string",
      "selector": "textarea",
      "source": "attribute",
      "attribute": "placeholder",
      "__experimentalRole": "content"
    }
  },
  "supports": {
    "anchor": false,
    "className": true,
    "lock": false,
    "reusable": false,
    "spacing": {
      "__experimentalSkipSerialization": true,
      "margin": [
        "top",
        "bottom"
      ],
      "padding": true,
      "__experimentalDefaultControls": {
        "padding": true
      }
    },
    "__experimentalBorder": {
      "color": true,
      "radius": true,
      "style": true,
      "width": true,
      "__experimentalSkipSerialization": true,
      "__experimentalDefaultControls": {
        "color": true,
        "radius": true,
        "style": true,
        "width": true
      }
    }
  },
  "editorScript": "file:./index.js"
}